{
  "pluginAlias": "IPortSMButtonsLAN",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "iPort Buttons LAN"
      },
      "ip": {
        "title": "Device IP Address",
        "type": "string",
        "placeholder": "192.168.2.12"
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "default": 10001
      },
      "timeout": {
        "title": "Connection Timeout (ms)",
        "type": "integer",
        "default": 5000
      },
      "reconnectDelay": {
        "title": "Reconnect Delay (ms)",
        "type": "integer",
        "default": 5000
      },
      "directControlPort": {
        "title": "Direct Control HTTP Port",
        "type": "integer",
        "default": 3000
      },
      "buttonMappings": {
        "title": "Button Mappings",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "buttonNumber": {
              "title": "Button Number",
              "type": "integer",
              "minimum": 1,
              "maximum": 10
            },
            "modeColor": {
              "title": "LED Mode Color",
              "type": "string",
              "enum": ["yellow", "red", "green", "blue", "purple", "white", "any"],
              "default": "any",
              "description": "Execute only when iPort LED is this color (or 'any' for all)."
            },
            "actionType": {
              "title": "Action Type",
              "type": "string",
              "enum": ["lifx"],
              "default": "lifx"
            },
            "targetId": {
              "title": "Target LIFX Bulb(s)",
              "type": ["string", "array"],
              "items": {
                "type": "string",
                "description": "LIFX bulb ID (MAC without ':', e.g. d073d5000001)"
              },
              "description": "Single LIFX ID or list of IDs (bulbs controlled together)."
            },
            "action": {
              "title": "Action",
              "type": "string",
              "enum": ["on", "off", "brightness"],
              "default": "on"
            },
            "value": {
              "title": "Brightness Value (0â€“100)",
              "type": "integer",
              "minimum": 0,
              "maximum": 100
            }
          },
          "required": ["buttonNumber", "modeColor", "actionType", "targetId", "action"],
          "allOf": [
            {
              "if": { "properties": { "action": { "const": "brightness" } } },
              "then": { "required": ["value"] }
            }
          ]
        }
      }
    },
    "required": ["name", "ip", "port", "buttonMappings"]
  }
}
